{
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules"
  ],
  "rules": {
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "max-line-length": [true, 150],
    "interface-name": false,
    "no-console": false
  },
  "linterOptions": {
    "include": [
      "src/**"
    ],
    "exclude": [
      "node_modules/**",
      "build/**"
    ]
  }
}
