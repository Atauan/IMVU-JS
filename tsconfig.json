{
  "compilerOptions": {
    /* Module/Target Options */
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "es2017"],

    /* Basic Options */
    "removeComments": true,

    /* Strict Type-Checking Options */
    "alwaysStrict": true,
    "noImplicitAny": true,

    /* Extra Options */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,

    "outDir": "./lib",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "lib/**",
    "node_modules/**",
  ]
}
