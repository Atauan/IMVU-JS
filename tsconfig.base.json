{
  "compilerOptions": {
	"module": "commonjs",
    "target": "es6",
	"lib": ["dom", "es2019"],
    "moduleResolution": "node",

    "rootDir": ".",
	"baseUrl": ".",

	"composite": true,
	"incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
  	"isolatedModules": true,

	"strict": true,
	"esModuleInterop": true,
	"useDefineForClassFields": true,
	"allowSyntheticDefaultImports": true,
	"forceConsistentCasingInFileNames": true,
	"skipLibCheck": true,

	"emitDecoratorMetadata": true,
	"experimentalDecorators": true,

	"paths": {
	  "@imvu/*": ["./packages/*/src"]
	}
  },
  "exclude": [
    "node_modules"
  ]
}
